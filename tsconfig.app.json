{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite-plugin-pwa/react"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@GAMETypes/*": ["./src/@types/game/*"],
      "@/*": ["./src/@types/*"],
      "_APP/*": ["./src/app/*"],
      "_LAY/*": ["./src/app/layouts/*"],
      "_PAG/*": ["./src/app/pages/*"],
      "_UTL/*": ["./src/services/util/*"],
      "_STR/*": ["./src/services/store/*"],
      "_SRV/*": ["./src/services/*"],
      "_CFG/*": ["./src/config/*"],
      "_AST/*": ["./src/_assets_/*"],
      "_GAME/*": ["./src/game/*"],
      "~/*": ["./src/*"],
    },
  },
  "include": ["src"],
}
